{% for key, item in term.0 %}
    {% if key != "id" %}
        <div>
                {% set twig_content_variable= key %}
                {% set replace_value_var= "_" %}
                {% set replace_with_value_var = ' ' %}
            <label for="column-name" class="inp">
                <input value="{{ item }}" type="text" class="inputEditTerm" id="term-{{ key }}" placeholder=" ">
                <span class="label">
                    {{ twig_content_variable|replace({ (replace_value_var): replace_with_value_var }) }}
                </span>
                <span class="focus-bg"></span>
            </label>
        </div>
    {% endif %}
{% endfor %}